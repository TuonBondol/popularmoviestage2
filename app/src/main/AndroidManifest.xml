<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.androidmvp.bondol.project1">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="app.popularmoviestage.project.MainActivity"
            android:label="@string/home_screen_title"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="app.popularmoviestage.project.MovieDetailActivity"
            android:label="@string/movie_detail_title"
            android:parentActivityName="app.popularmoviestage.project.MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="app.popularmoviestage.project.MainActivity" />
        </activity>
        <activity android:name="app.popularmoviestage.project.PlayTrailerActivity" />
        <activity android:name="app.popularmoviestage.project.MovieReviewActivity"></activity>
    </application>

</manifest>